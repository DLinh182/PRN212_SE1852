<Window x:Class="HelloWpfApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWpfApp"
        mc:Ignorable="d"
        Title="Đăng nhập hệ thống" Height="450" Width="800">
    <Grid>
        <Label Content="_User name" 
               Target="{Binding ElementName=txtUsername}"
               
               HorizontalAlignment="Left" Margin="83,77,0,0" VerticalAlignment="Top"/>
        
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="180,85,0,0" TextWrapping="Wrap" Text="my user name" VerticalAlignment="Top" Width="120"/>
        <Label Content="_Password" 
               Target="{Binding ElementName=txtPassword}"
               HorizontalAlignment="Left" Margin="83,121,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="180,125,0,0" VerticalAlignment="Top" Width="120" Password="123"/>
        <Button x:Name="btnDangNhap" Content="Đăng nhập" HorizontalAlignment="Left" Margin="129,171,0,0" VerticalAlignment="Top" Click="btnDangNhap_Click"/>
        <Button x:Name="btnThoat" Content="Thoát" HorizontalAlignment="Left" Margin="206,171,0,0" VerticalAlignment="Top" Click="btnThoat_Click"/>

    </Grid>
</Window>
